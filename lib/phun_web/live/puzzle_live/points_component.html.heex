<div>
  <svg viewBox="0 0 220 220" xmlns="http://www.w3.org/2000/svg">
    <%= for x <- 1..@puzzle.width, y <- 1..@puzzle.height do %>
      <.rect x={x}
	     y={y}
	     alive={Map.get(@grid, {x, y}, false)}
	     myself={@myself} />
    <% end %>
  </svg>

  <.button phx-click="toggle"
	   phx-confirm="Are you sure?"
	   phx-target={@myself}>
    Toggle</.button>
  <.button phx-click="save"
	   phx-confirm="Are you sure?"
	   phx-target={@myself}>
    Save
  </.button>
</div>

